<a href="/dashboard" class="btn back-btn">&larr; Back</a>
<div class="admin-title">
  <h2>Add New Project</h2>
</div>

<form action="/add-post" method="POST">
  <label for="image"><b>Image URL</b></label>
  <input type="text" placeholder="Image URL" name="image" />

  <label for="title"><b>Title</b></label>
  <input type="text" placeholder="Post Title" name="title" />

  <label for="summary"><b>Summary</b></label>
  <input type="text" placeholder="Post Summary" name="summary" />

  <label for="body"><b>Content</b></label>
  <textarea id="summernote" name="body" cols="50" rows="7"></textarea>

  <label for="tools"><b>Tools Used</b></label>
  <textarea name="tools"></textarea>

  <label for="projectUrl"><b>Project URL</b></label>
  <input type="text" placeholder="Project URL" name="projectUrl" />

  <input type="submit" value="Add" class="btn" />
</form>

<!-- summernote rich text -->
<link
  href="https://stackpath.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css"
  rel="stylesheet"
/>
<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
<link
  href="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote.min.css"
  rel="stylesheet"
/>
<script src="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote.min.js"></script>

<script>
  $(document).ready(function () {
    $('#summernote').summernote({
      height: 300,
      minHeight: null,
      maxHeight: null,
      focus: true,
    });
  });
</script>
